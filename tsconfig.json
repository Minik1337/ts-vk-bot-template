{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true, 
    "outDir": "dist",   
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@Config": ["config.json"],
      "@Main/*": ["src/bot/*"]
    }
  }
}